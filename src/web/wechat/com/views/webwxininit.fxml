<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<SplitPane fx:id="mainInner" dividerPositions="0.28" prefHeight="720" prefWidth="1000" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="web.wechat.com.views.Webwxininit">
    <items>
        <AnchorPane>
            <children>
                <GridPane alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="80.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="32.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="568.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label fx:id="nickName" text="" GridPane.columnIndex="1" />
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-padding: 10;">
                            <children>
                                <ImageView fx:id="avatarIV" fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true" styleClass="avatar" />
                            </children>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </HBox>

                        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="1">
                            <TextField alignment="TOP_LEFT" prefHeight="23.0" prefWidth="240.0">
                                <opaqueInsets>
                                    <Insets />
                                </opaqueInsets>
                            </TextField>
                        </HBox>
                        <HBox alignment="CENTER" onMouseClicked="#toChat" prefHeight="40.0" GridPane.rowIndex="2">
                            <children>
                                <Label text="聊天" />
                                <!--  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true"/>-->
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" onMouseClicked="#toRead" prefHeight="40.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <children>
                                <Label text="阅读" />
                                <!--  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true"/>-->
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" onMouseClicked="#toContact" prefHeight="40.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
                            <children>
                                <Label text="通讯录" />
                                <!--  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true"/>-->
                            </children>
                        </HBox>

                        <ListView fx:id="contactList" prefHeight="568.0" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="3">
                        </ListView>
                        <Button fx:id="dropMenu" mnemonicParsing="menu" onAction="#showData" text="ddd" GridPane.columnIndex="2" />
                    </children>

                </GridPane>


            </children>
        </AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <children>
                <BorderPane prefHeight="740.0" prefWidth="690.0">
                    <top>
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <children>
                                <Label fx:id="contactName" text="Label" />
                            </children>
                        </HBox>
                    </top>
                    <center>
                        <ScrollPane focusTraversable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
                            </content>
                        </ScrollPane>
                    </center>
                    <bottom>
                        <BorderPane prefHeight="180.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <top>
                                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="690.0" BorderPane.alignment="CENTER">
                                    <children>
                                        <Button prefHeight="30.0" prefWidth="30.0" styleClass="expressions">
                                            <HBox.margin>
                                                <Insets left="10.0" />
                                            </HBox.margin>
                                        </Button>
                                        <Button prefHeight="30.0" prefWidth="30.0" styleClass="cuts">
                                            <HBox.margin>
                                                <Insets left="10.0" />
                                            </HBox.margin>
                                        </Button>
                                        <Button prefHeight="30.0" prefWidth="30.0" styleClass="files" text="file">
                                            <HBox.margin>
                                                <Insets left="10.0" />
                                            </HBox.margin>
                                        </Button>
                                    </children>
                                </HBox>
                            </top>
                            <center>
                                <TextArea fx:id="msgContent" focusTraversable="false" prefHeight="84.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                            </center>
                            <bottom>
                                <HBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="TOP_RIGHT">
                                    <children>
                                        <Button alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#sendMsg" text="send" styleClass="sendBtn"/>
                                    </children>
                                    <padding>
                                        <Insets right="10.0" top="10.0" />
                                    </padding>
                                </HBox>
                            </bottom>
                        </BorderPane>
                    </bottom>
                </BorderPane>
            </children>
        </AnchorPane>

    </items>
</SplitPane>
